<!DOCTYPE html>
<html>
    <head>
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css">
        <base href="../" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta charset="utf-8" />
        <style type="text/css">
            header, main, footer {
                padding-left: 300px;
            }

            @media only screen and (max-width : 992px) {
                header, main, footer {
                    padding-left: 0;
                }
            }
        </style>
    </head>
    <body>
        <ul id="slide-out" class="side-nav fixed">
            {% for item in menu %}
                <li class="no-padding">
                    <ul class="collapsible collapsible-accordion">
                        {% include 'menu.html.twig' with item %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
        <header>
            <div class="navbar-fixed">
                <nav>
                    <div class="nav-wrapper">
                        <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
                        <a href="#!" class="brand-logo">Logo</a>
                        <ul class="right hide-on-med-and-down">
                            <li><a href="#1">Sass</a></li>
                            <li><a href="#2">Components</a></li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>


        <main>
            <div class="container">
                <div class="row">
                    <div class="col s12 m9 l10">
                        {% for feature in features %}
                            {{ feature|raw }}
                        {% endfor %}
                    </div>
                    <div class="col hide-on-small-only m3 l2">
                        <div class="toc-wrapper pinned">
                        <ul class="section table-of-contents">
                            {% for item in pageMenu %}
                                <li><a href="{{ item.link|anchor }}">{{ item.label }}</a></li>
                            {% endfor %}
                        </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js"></script>
        <script type="text/javascript">
            $(function () {
                $(".button-collapse").sideNav();
                $(".scrollspy").scrollSpy();
            });
        </script>
    </body>
</html>
