<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="dkplus.markdown.page_processor" class="Dkplus\LivingDocs\MarkdownExtension\MarkdownPageProcessor">
            <tag name="dkplus.pages.processor" page_type="markdown" />
        </service>
        <service id="dkplus.markdown.twig_extension" class="Dkplus\LivingDocs\MarkdownExtension\MarkdownTwigExtension" />
        <service id="dkplus.markdown.page_renderer" class="Dkplus\LivingDocs\MarkdownExtension\MarkdownPageRenderer">
            <argument type="service" id="dkplus.twig.twig_page_renderer" />
        </service>
    </services>
</container>
