<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="dkplus.pages.processing" class="Dkplus\LivingDocs\PagesExtension\PagesProcessing">
            <argument type="service" id="dkplus.pages.processed_pages" />
            <tag name="dkplus.processing_step" priority="1000"/>
        </service>

        <service id="dkplus.pages.pre_processing" class="Dkplus\LivingDocs\PagesExtension\PagesPreProcessing">
            <tag name="dkplus.processing_step" priority="20000"/>
        </service>

        <service id="dkplus.pages.processed_pages" class="Dkplus\LivingDocs\PagesExtension\ProcessedPageCollector" />
    </services>
</container>
