<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="cli.command" class="Dkplus\LivingDocs\Extension\Command">
            <argument>%cli.command.name%</argument>
            <argument type="service" id="dkplus.processor"/>
        </service>
        <service id="dkplus.processor" class="Dkplus\LivingDocs\Extension\Processor"/>
        <service id="dkplus.core.relative_path" class="Dkplus\LivingDocs\Extension\RelativePathCalculator"/>
    </services>
</container>
